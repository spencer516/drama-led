{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2023"
    ],
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "stripInternal": true,
    "target": "ES2022",
    "rootDir": ".",
    "outDir": "build",
    "strict": true,
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
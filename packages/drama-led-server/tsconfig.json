{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2023"],
    "module": "NodeNext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "stripInternal": true,
    "target": "ESNext",
    "rootDir": ".",
    "outDir": "build",
    "strict": true,
  },
  "include": [
    "src/index.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}